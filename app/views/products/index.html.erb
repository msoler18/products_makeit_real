<div class="container">
  <div class="row">
      <h1>Products</h1>    
  </div>
  <div class="row">
    <div class="col-xs-12">
       <table class="table">
          <thead>
          <tr>
            <th>Product</th>
            <th>Price</th> 
            <th>Categories</th>
            <th></th>
          </tr>
          </thead>
          <% @products.each do |product|  %>
          <tbody>
          <tr>
            <td><%= product.name %></td>
            <td><%=	product.price  %></td>
            	<% product.categories.each do |category| %>
            <td><%= category.name  %></td>
            <% end %>	
            <td><%= link_to "Edit", edit_product_path(product) %>| <%= link_to("Delete", product_path(product), method: :delete, data:{ confirm: 'Are you sure?'}) %></td>
          <% end %>
          </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>  
<%= link_to "Create Product", new_product_path %>
