<h1>Products</h1>
<% @products.each do |product|  %>
	<table style="width:100%">
  <tr>
    <th>Product</th>
    <th>Price</th> 
    <th>Categories</th>
    <th></th>
  </tr>
  <tr>
    <td><%= product.name %></td>
    <td><%=	product.price  %></td>
    <% product.categories.each do |category| %> 
    	<td><%= category.name %></td>
    <% end %>	
    <td><p><%= link_to "Edit", edit_product_path(product) %>| <%= link_to("Delete", product_path(product), method: :delete, data:{ confirm: 'Are you sure?'}) %></p></td>
  </tr>
</table>
<% end %>

<%= link_to "Create Product", new_product_path %>