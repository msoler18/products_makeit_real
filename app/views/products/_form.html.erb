<h1><%= @product.new_record? ? "Create New Product" : "Edit product" %></h1>
	<%= form_for @product do |f| %>
		<%= f.text_field :name, placeholder:"Product name" %>
		<%= f.number_field :price, placeholder:"Product price" %>
		<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
		<%= f.submit @product.new_record? ? "Create" : "Edit" %>
	<% end %>
